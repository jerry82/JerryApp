<div data-ng-controller="titlesController" data-ng-init="" class="container">

    <h3 class="page-title">
        Title Query
    </h3>
    <p class="light">This page allows you to query the titles.</p>
    <hr />

    <!--
    <div data-ng-show="errors" data-ng-cloak>
        <div class="alert alert-danger" role="alert">
            <p data-ng-repeat="error in errors"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> {{error}}</p>
        </div>
    </div>
    -->
    <div data-ng-show="errors" data-ng-cloak>
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> {{errors}}</p>
        </div>
    </div>
    
    <form>
        <div class="form-group">
            <label for="titleName">Title Name:</label>
            <input class="form-control" id="keyword" data-ng-model="keyword" placeholder="Please enter title's name">
        </div>
        <button type="submit" class="btn btn-default" data-ng-click="searchTitle()" data-ng-disabled="searching">Search</button>
    </form>
    <hr />
    <h4 class="page-title" data-ng-cloak>
        Total Titles Found: {{titleNames.length}}
    </h4>
    <table class="table table-striped" id="requestTable" data-ng-show="titleNames.length > 0" data-ng-cloak>
        <thead class="head-caption">
            <tr>
                <th class="header">TitleID</th>
                <th class="header">Title Names</th>
                <th class="header"></th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="model in titleNames">
                <td>{{model.TitleId}}</td>
                <td><li data-ng-repeat="(lang, desc) in model.NamesDict">{{lang}}: {{desc}}</li></td>
                <td>
                    <a href target="_self" ng-click="getDetail(model)">Detail</a>
                </td>
            </tr>
        </tbody>
    </table>

    <br /><br />
    <div id="detailPanel" data-ng-show="detailShow" data-ng-cloak>
        <div id="pageTitle">
            <h4 class="page-title">
                Details of Selected Title: <b>"{{SelectedTitle.TitleName}}"</b>
            </h4>
            <p class="light">This page allows you to query the titles.</p>
        </div>
        <hr />

        <div class="panel panel-success">
            <div class="panel-heading">Detail</div>
            <div class="panel-body">

                <ul>
                    <li><b>Title Name: </b> {{SelectedTitle.TitleName}} </li>
                    <li><b>Release Year: </b> {{SelectedTitle.ReleaseYear}} </li>
                    <li><b>Processed DateTime UTC: </b> {{SelectedTitle.ProcessedDateTimeUTC}} </li>
                    <li><b>Genre:</b>
                        <ul>
                            <li data-ng-repeat="tg in SelectedTitle.TitleGenres">{{tg.Genre.Name}}</li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>

        <div class="panel panel-success">
            <div class="panel-heading">Other Names</div>
            <div class="panel-body">
                <table class="table" id="" data-ng-cloak>
                    <thead class="head-caption">
                        <tr>
                            <th class="header">Title Name Language</th>
                            <th class="header">Title Name</th>
                            <th class="header">Title Name Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="model in SelectedTitle.OtherNames">
                            <td>{{model.TitleNameLanguage}}</td>
                            <td>{{model.TitleName}}</td>
                            <td>{{model.TitleNameType}}</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>


        <div class="panel panel-success">
            <div class="panel-heading">Awards</div>
            <div class="panel-body">
                <div data-ng-hide="SelectTitle.Awards.length > 0">No Award</div>
                <table class="table" id="" data-ng-show="SelectTitle.Awards.length > 0" data-ng-cloak>
                    <thead class="head-caption">
                        <tr>
                            <th class="header">Award Won</th>
                            <th class="header">Award</th>
                            <th class="header">Award Year</th>
                            <th class="header">Award Company</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="model in SelectedTitle.Awards">
                            <td>{{checkmark(model.AwardWon)}}</td>
                            <td>{{model.Award1}}</td>
                            <td>{{model.AwardYear}}</td>
                            <td>{{model.AwardCompany}}</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>